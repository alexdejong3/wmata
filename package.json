{
  "name": "wmata",
  "version": "1.0.0",
  "description": "A modern Node.js application written in TypeScript.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_NO_WARNINGS=1 node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "vitest run",
    "db:init": "psql -f scripts/init_db.sql",
    "db:status": "psql -c \"SELECT 1\"",
    "worker": "NODE_NO_WARNINGS=1 node --loader ts-node/esm src/worker.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.6",
    "@types/twilio": "^3.19.2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.929.0",
    "axios": "^1.13.1",
    "dotenv": "^17.2.3",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "twilio": "^5.10.4",
    "typeorm": "^0.3.27"
  }
}
